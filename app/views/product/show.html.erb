                    <li data-thumb="<%= asset_path 'products/' + item.img %>">
                      <div class="thumb-image">
                        <img src="<%= asset_path 'products/' + item.img %>" data-imagezoom="true" class="img-responsive" alt="Product Image"/>
                      </div>
                    </li>
